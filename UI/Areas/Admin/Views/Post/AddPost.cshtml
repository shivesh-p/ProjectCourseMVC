
@{
    ViewBag.Title = "AddPost";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}




<section class="content-header">

    <h1>Add Post</h1>
    <ol class=" breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Post</a></li>
        <li class="breadcrumb-item active"><a>Add Post</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/Post/PostList'">Post List</button>
</div>
