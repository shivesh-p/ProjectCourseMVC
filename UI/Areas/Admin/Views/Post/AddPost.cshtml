    <div class="row">
        <div class="col-md-9">
            @Html.Partial("~/Areas/Admin/Views/Shared/MessageForm.cshtml")
            <script src="~/Areas/Admin/Content/JS/ckeditor/ckeditor.js"></script>
            @* <script src="~/Areas/Admin/Content/JS/ckeditor5/ckeditor.js"></script>*@
